<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RFIDTagReader" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Set the status bar text to dark (black) -->
        <item name="windowActionBar">true</item>
    </style>
    <style name="Theme.RFIDTagReader.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RFIDTagReader.AppBarOverlay" parent="Widget.AppCompat.ActionBar" />

    <style name="Theme.RFIDTagReader.PopupOverlay" parent="Theme.AppCompat.Light" />

</resources>